<h1 class="head">Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to "Show", book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(book.id), method: :delete, data_confirm: 'Are you sure?' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'shared/error_messages' %>

<h2>New book</h2>

<% title_class = @book.errors[:title].any? ? 'field-with-error' : '' %>
<% body_class = @book.errors[:body].any? ? 'field-with-error' : '' %>
    
<%= form_with model: Book.new do |f| %>
    <div class="field">
        <div class="<%= title_class %>">
          <label for="book-title">Title</label>
        </div>
        <div class="<%= title_class %>">
          <%= f.text_field :title, class: 'field-title' %>
        </div>
    </div>
    
    <div class="field">
        <div class="<%= body_class %>">
          <label for="book-body">Body</label>
        </div>
        <div class="<%= body_class %>">
          <%= f.text_area :body, class: 'field-title' %>
        </div>
    </div>
    <div class="field">
        <%= f.submit 'Create Book', class: 'btn-submit' %>
    </div>
<% end %>
